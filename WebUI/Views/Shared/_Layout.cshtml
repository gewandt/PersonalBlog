<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Bugblog</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Home", "Home")">BUG<i class="fa fa-bug"></i>BLOG</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Home", "Home")">HOME</a></li>
                    <li><a href="@Url.Action("Home", "Home")">BLOGS</a></li>
                    <li>
                        <a href="@Url.Action("Login", "Account")">LOG IN</a>
                        @*@Html.ActionLink("actionLinkLogin", "Login", "Account")*@
                    </li>
                    <li><a href="@Url.Action("Register", "Account")">SIGN IN <i class="fa fa-sign-in"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container centered w">
        @RenderBody()
    </div>
    <!-- Footer -->
    <div id="f">
        <div class="container">
            <div class="row centered">
                <a href="#"><i class="fa fa-vk"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-apple"></i></a>
                <p>&copy;&nbsp;@DateTime.Now.Year&nbsp;Bugblog - All rights reserved.</p>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
